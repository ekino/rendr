{
  "name": "nextjs-with-remoteapi",
  "version": 2,
  "regions": ["cdg1"],
  "public": true,
  "builds": [
    { "src": "next.config.js", "use": "@now/next"},
    {"src": "server.js", "use": "@now/node" , "config": { "helpers": "false" }}
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "routes": [
    { "src": "/ping", "dest": "ping"},
    { "src": "/api/.*", "dest": "/server.js"},
    { "src": "^/(([^_]{1}.*)|$)", "dest": "_rendr"}
  ]
}