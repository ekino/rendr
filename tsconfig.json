{
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "noLib": false,
    "skipLibCheck": true,
    "target": "es5",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node"
  }
}
